{
  "name": "server",
  "version": "1.0.0",
  "description": "MERN Week 6 - Testing and Debugging (Server)",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node index.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --runInBand",
    "test:unit": "npm test -- tests/unit",
    "test:integration": "npm test -- tests/integration"
  },
  "dependencies": {
    "express": "^4.21.2",
    "mongoose": "^8.7.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "mongodb-memory-server": "^10.1.4",
    "supertest": "^7.1.0"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {},
    "moduleFileExtensions": [
      "js",
      "json"
    ],
    "verbose": true
  }
}
